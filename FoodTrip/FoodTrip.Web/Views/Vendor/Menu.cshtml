@model FoodTrip.Web.Models.MenuViewModel

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<div>
    <h4>Menu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
    <a href="/Vendor/Menu/@Model.Id/AddItem">Add Menu Item</a>
    <table class="table table-bordered">
        <caption>Menu Items</caption>
        <thead>
            <tr class="warning">
                <th>Food</th>
                <th>Price</th>
                <th>Qty.</th>
                <th>Order Qty.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MenuItems)
            {
                <tr>
                    <td>@item.Food.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.OrderQuantity</td>
                </tr>
            }
            <tr class="success">
                <td colspan="4">Total: @Model.MenuItems.Count()</td>
            </tr>
        </tbody>
    </table>

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
